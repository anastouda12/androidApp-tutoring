<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/paddingSides_landscape"
    android:paddingRight="@dimen/paddingSides_landscape"
    android:background="@color/colorPrimary"
    tools:context=".MyAccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/myaccount"
            style="@style/textView_style"
            android:textSize="30dp"
            android:layout_marginBottom="20dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/default_img_user"
            android:layout_marginBottom="15dp"/>

        <EditText
            style="@style/editText_style"
            android:hint="@string/mail"
            android:paddingLeft="10dp"
            android:id="@+id/input_email_myaccount"
            android:focusable="false"
            android:clickable="false"
            android:drawableLeft="@drawable/ic_action_user"
            android:inputType="none"/>

        <EditText
            style="@style/editText_style"
            android:hint="@string/name"
            android:paddingLeft="10dp"
            android:id="@+id/input_name_myaccount"
            android:drawableLeft="@drawable/ic_action_person"
            android:inputType="text" />


        <EditText
            style="@style/editText_style"
            android:hint="@string/phone"
            android:id="@+id/input_phone_myaccount"
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/ic_action_phone"
            android:inputType="phone" />

        <Button
            android:id="@+id/btn_save_myaccount"
            style="@style/button_style"
            android:text="@string/Save" />

    </LinearLayout>
</ScrollView>